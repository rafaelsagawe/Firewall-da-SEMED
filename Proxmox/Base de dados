Testes no ubuntu 16.04 minimal

*// Usuário root do sistema

# Atualização do Linux
sudo apt update && sudo apt upgrade

# Ambiente
sudo apt install git openssh-server proftpd-basic build-essential libexpat1-dev zlib1g-dev libssl-dev libpcre3 libpcre3-dev

# Liberando acesso root via ssh
nano /etc/ssh/sshd_config
|
| PermitRootLogin yes
|
service ssh restart

# Apache2.4.9
wget http://archive.apache.org/dist/httpd/httpd-2.4.9.tar.gz && tar zxvf httpd-2.4.9.tar.gz


# Dependencias
cd httpd-2.4.9/srclib/
wget http://mirror.nbtelecom.com.br/apache//apr/apr-1.6.3.tar.gz && tar zxvf apr-1.6.3.tar.gz &&  mv apr-1.6.3 apr

wget http://mirror.nbtelecom.com.br/apache//apr/apr-util-1.6.1.tar.gz && tar zxvf apr-util-1.6.1.tar.gz && mv apr-util-1.6.1 apr-util

cd apr && ./configure && make && make install

 cd ../apr-util
 ./configure --prefix=/usr/local/apr-util  --with-apr=/usr/local/apr/bin/apr-1-config
 make && make install
 cd ../../..

wget ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/pcre2-10.21.tar.gz
tar zxvf pcre2-10.21.tar.gz && cd pcre2-10.21 
./configure --prefix=/usr/local/pcre && make && make install

 cd ../httpd-2.4.9

./configure --prefix=/opt/apache2 --enable-file-cache --enable-cache --enable-disk-cache --enable-mem-cache --enable-deflate --enable-expires --enable-headers --enable-usertrack --enable-ssl --enable-cgi --enable-vhost-alias --enable-rewrite --enable-so --with-apr=/usr/local/apr/
make
make install

# Iniciando o Apache
cd /opt/apache2/bin
./apachectl start

## PHP 7.0.31

 wget http://br2.php.net/distributions/php-7.0.31.tar.gz && tar zxvf php-7.0.31.tar.gz && cd php-7.0.31
 
 ./configure --prefix=/usr --disable-static --with-apxs=/usr/sbin/apxs --sysconfdir=/etc --enable-discard-path --with-config-file-path=/etc/apache --enable-safe-mode --with-openssl --enable-bcmath --with-bz2 --with-pic --enable-calendar --enable-ctype --with-gdbm --with-db3 --with-imap-ssl=/tmp/pine4.58/imap/c-client --with-imap=/tmp/pine4.58/imap/c-client --enable-dbase --enable-ftp --with-iconv --with-gd --enable-gd-native-ttf --with-jpeg-dir=/usr --with-png --with-gmp --with-pgsql=shared,/usr/local/pgsql --with-xml=shared,/usr --with-gettext=shared,/usr --with-mm=/usr --enable-trans-sid --enable-shmop --enable-sockets --with-regex=php --enable-sysvsem --enable-sysvshm --enable-yp --enable-memory-limit --with-tsrm-pthreads --enable-shared --disable-debug --with-zlib=/usr

#### erro
configure: error: Please reinstall the BZip2 distribution
#### erro

# Desligar o sistema
poweroff

# Download do postgres
wget https://ftp.postgresql.org/pub/source/v9.5.0/postgresql-9.5.0.tar.bz2

# Extraindo o postgres
tar zxvf postgresql-9.5.0.tar.bz2
cd postgresql-9.5.0/

# configurações e instalação
./configure --prefix=/opt/postgres  --with-perl --with-python --with-openssl --with-pam -enable-thread-safety --with-libxml

make
make install / sudo make install

# Criação do usuário postgres tendo a home direto na pasta da instalação
sudo adduser postgres --home=/opt/postgres

*// Usuario postgres

# Inicialização do banco de dados
cd bin/
./pg_ctl -v
./pg_ctl -D /opt/postgres/data/ start

# Verificação 
ps -aux | grep 9822

# Acessando o terminadl do postgres (psql)
cd bin/
./psql -d template1

# Configurações extras
nano ../data/pg_hba.conf

|
| listen_addresses = '*'
| 
| port = 5432
|

nano ../data/postgresql.conf

|
| host    all             all             127.0.0.1/32      trust
| host    all             all             192.168.1.0/24    trust
|
