apt install postgresql-9.5 postgresql-contrib-9.5
su postgres
  psql
    CREATE USER ieducar SUPERUSER INHERIT CREATEDB CREATEROLE;
    ALTER USER ieducar PASSWORD 'semed-ni';
    CREATE DATABASE ieducar;
    \q
  exit

nano ieducar/configuration/ieducar.ini
            [production]
            ; Configura    es de banco de dados
            app.database.dbname   = ieducar
            app.database.username = ieducar
            app.database.hostname = localhost
            app.database.password = semed-ni
            app.database.port     = 5432
            app.name              = "i-Educar"


            $environments = array(
