iface eth1 inet static
	address 192.168.31.192
	netmask 255.255.255.0
	broadcast 192.168.31.255
	network 192.168.31.0

iface eth1:1 inet static
	address 192.168.30.2
	netmask 255.255.255.0
	broadcast 192.168.30.255
	network 192.168.30.0
